<% if !@movie_results.empty? %>
  Movies:
  <ul>
  <% @movie_results.each do |movie| %>
  <li><%=  strip_tags(movie).html_safe %></li>
  <% end %>
  </ul>
<% else %>
  <h4> Those two people were never in the same movie together.</h4>
<% end %>

<% if !@tv_results.empty? %>
  TV Shows:
  <ul>
  <% @tv_results.each do |show| %>
  <li><%=  strip_tags(show).html_safe %></li>
  <% end %>
  </ul>
<% else %>
  <h4> Those two people were never in the same tv show together.</h4>
<% end %>

<%= link_to "Another Pair?", root_path %>